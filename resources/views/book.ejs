<%- include('partials/header') %>
<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
        <meta name="generator" content="Hugo 0.88.1">
            <title>Library</title>

        <link rel="canonical" href="https://getbootstrap.com/docs/5.1/examples/jumbotron/">
        <!-- Bootstrap core CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <style>
    .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
    }

    @media (min-width: 768px) {
        .bd-placeholder-img-lg {
        font-size: 3.5rem;
        }
    }
    </style>
</head>

<body>
    <main>
    <div class="container py-4 book-display">
        <div class="row align-items-md-stretch">
        <div class="col-md-12">
        <div class="h-100 p-5 bg-light border rounded-3">
            <h2><%=title%></h2>
            <p class="fw-normal fs-5">Author : <span class="fw-lighter text-capitalize"><%=author%></span></p>
            <p class="fw-normal fs-5">Edition : <span class="fw-lighter text-capitalize"><%=edition%></span></p>
            <p class="fw-normal fs-5">ISBN : <span class="fw-lighter text-capitalize"><%=isbn%></span></p> 
            <p class="fw-normal fs-5">Publisher : <span class="fw-lighter text-capitalize"><%=publisher%></span></p>
            <p class="fw-normal fs-5">Published : <span class="fw-lighter text-capitalize"><%=published%></span></p>
            <p class="fw-normal fs-5">No of books : <span class="fw-lighter text-capitalize"><%=qty%></span></p>
            <!-- preview of book -->
            <embed width="100%" height="100%" name="plugin" id="embdLink" />
            <%if(preview != null){%>
                <button class="btn btn-primary px-4" id="btnPrvw" value= "<%=preview%>" type="button">preview</button>
            <%}%>
            <%if(publisher === 'University'){%>
                <button class="btn btn-warning px-4" type="button">Buy</button>
            <%}%>
            <button class="btn btn-secondary px-4" type="button">Issue</button>
        </div>
        </div>
    </div>
    </div>
</main>


<div class="home-wrapper similar-section">
    <%if(relatedBook.length > 1){%>
        <p class="fw-normal fs-2 text-center">Books from same publisher</p>
    <%}%>
    <div class="books-container">
        <%relatedBook.forEach((book) =>{%>
            <%if(book.title != title){%>
                <form class="form-books" action="/dashboard" method="post">
                <div class="books-details">
                        <p class="text-capitalize"><%=book.title%></p>
                        <p class="text-capitalize"><%=book.author%></p>
                        <a href="/book/<%=book.title%>" class="issueBook">View</a>
                    </div>
                </form>
                <%}%>
            <%})%>
    </div>
</div>

<%- include('partials/footer') %>