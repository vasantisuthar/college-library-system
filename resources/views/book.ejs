<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.88.1">
    <title>Library</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/5.1/examples/jumbotron/">
    <!-- Bootstrap core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <style>
    .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
    }

    @media (min-width: 768px) {
        .bd-placeholder-img-lg {
        font-size: 3.5rem;
        }
    }
    </style>
</head>

<body>
    <main>
    <div class="container py-4 book-display">
        <div class="row align-items-md-stretch">
        <div class="col-md-12">
        <div class="h-100 p-5 bg-light border rounded-3">
            <%foundBook.forEach((book) => {%>
            <h2><%=book.title%></h2>
            <p class="fw-normal fs-5">Author : <span class="fw-lighter"><%=book.author%></span></p>
            <p class="fw-normal fs-5">Edition : <span class="fw-lighter"><%=book.edition%></span></p>
            <p class="fw-normal fs-5">ISBN : <span class="fw-lighter"><%=book.isbn%></span></p> 
            <p class="fw-normal fs-5">Publisher : <span class="fw-lighter"><%=book.publisher%></span></p>
            <p class="fw-normal fs-5">Published : <span class="fw-lighter"><%=book.published%></span></p>
            <p class="fw-normal fs-5">No of books : <span class="fw-lighter"><%=book.qty%></span></p>
                <%if(book.publisher === 'University'){%>
                    <button class="btn btn-warning px-4" type="button">Buy</button>
                <%}%>
            <%})%>

            <button class="btn btn-secondary px-4" type="button">Issue</button>
        </div>
        </div>
    </div>
    </div>
</main>
</body>
</html>



