<%- include('../partials/header') %>
<div class="home-wrapper">
    <div class="books-container">
        <!--search input-->
        <form action="/search" class="form-control d-flex search" method="post">
            <input class="form-control" required name="bookname" placeholder="Type to search...">
            <button class="btn btn-outline-secondary" type="submit">Search</button>
        </form>      
        
        <!-- display searched book  -->
        <%foundBook.forEach((book) =>{%>
            <form class="form-books" action="/dashboard" method="post">
                <div class="books-details">
                        <p><%=book.title%></p>
                        <p><%=book.author%></p>
                        <p><%=book.edition%></p>
                        <a href="/book/<%=book._id%>" class="issueBook">View</a>
                    </div>
                </form>
            <%})%>
        </div>
</div>
<%- include('../partials/footer') %>