<%- include('../partials/header') %>

<div id="login-box">
    <div class="left">
        <p>Add books</p>
        <%if(messages.error){%>
        <p class="error-msg"><%=messages.error%></p>
    <%}%>
        <form action="/add" method="post">
            <input type="text" name="title" placeholder="Book Title" required/>
            <input type="text" name="author" placeholder="Book Author" required/>
            <div class="row">
                <div class="col col-lg-6 col-md-12 col-sm-12 col-xs-12">
                    <input type="text" name="edition" placeholder="Book Edition" required/>
                </div>
                <div class="col col-lg-6 col-md-12 col-sm-12 col-xs-12">
                    <input type="text" name="published" placeholder="Published Date" required/>
                </div>
            </div>
            <input type="text" name="isbn" placeholder="ISBN Number" required/> 
            <input type="text" name="publisher" placeholder="Publisher" required/> 
            <div class="row">
                <div class="col col-sm-12 col-lg-6 col-md-12 col-xs-12">
                    <input type="text" name="qty" placeholder="No of books" required/>
                </div>
                <div class="col col-sm-12 col-lg-6 col-md-12 col-xs-12">
                    <input type="text" name="totalBooks" placeholder="Total books" required/>
                </div>
            </div>
            <input type="submit" name="submit" value="Add" />
        </form>

    </div>
    </div>
<%- include('../partials/footer') %>